<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.avatar, 'Avatar', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.avatar, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.avatar) %}
                        <div class="text-danger">{{ form_errors(form.avatar) }}</div>
                    {% endif %}
                </div>
            </div>

            {{ form_rest(form) }}
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">{{ button_label|default('Sauvegarder') }}</button>
                    </div>
                </div>
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Revenir Ã  la liste</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
