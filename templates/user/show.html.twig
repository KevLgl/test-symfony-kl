{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div>
            <h1>User</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ user.address }}</td>
                </tr>
                <tr>
                    <th>Filepath</th>
                    <td>{{ user.filepath }}</td>
                </tr>
                </tbody>
            </table>

            <img src="{{ asset('uploads/' ~ user.getFilepath) }}" alt="Avatar" class="img-fluid img-thumbnail">


            <div class="d-flex justify-content-between">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary mx-2">Revenir Ã  la liste</a>
                <a class="btn btn-info mx-2" href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
